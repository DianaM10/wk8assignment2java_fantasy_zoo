<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/dark_button"
        android:text="Dark Enclosure"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_gravity="center"
        android:background="@drawable/vamireandzombie"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/sub_button"
        android:text="Water Enclosure"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_gravity="center"
        android:background="@drawable/nessieandkelpie"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored" />

    <Button
        android:id="@+id/stand_button"
        android:text="Standard Enclosure"
        android:layout_width="150dip"
        android:layout_gravity="center"
        android:background="@drawable/blade"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_height="150dip" />

</LinearLayout>