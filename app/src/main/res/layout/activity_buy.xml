<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/blade_button"
        android:text="Blade the Daywalker"
        android:layout_width="300dip"
        android:layout_height="60dip"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:textSize="24sp"
        android:textStyle="normal|italic"
        android:textAlignment="center"
        android:background="@android:color/darker_gray"
        android:visibility="visible"
         />

    <Button
        android:id="@+id/spike_button"
        android:text="Spike the Vampire"
        android:layout_height="60dip"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="0dp"
        style="@android:style/Widget.Holo.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:textSize="24sp"
        android:layout_width="300dip"
        android:textStyle="normal|italic"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/angel_button"
        android:text="Angel the Vampire"
        android:layout_height="60dip"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="0dp"
        style="@android:style/Widget.Holo.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:textSize="24sp"
        android:layout_width="300dip"
        android:textStyle="normal|italic"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/ed_button"
        android:text="Ed the zombie"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="0dp"
        style="@android:style/Widget.Holo.Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:textSize="24sp"
        android:layout_width="300dip"
        android:textStyle="normal|italic"
        android:background="@android:color/darker_gray"
        android:layout_height="60dip" />

    <Button
        android:id="@+id/kelpie_button"
        android:text="Duke the Kelpie"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="0dp"
        style="@android:style/Widget.Holo.Button"
        android:layout_height="60dip"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:textSize="24sp"
        android:layout_width="300dip"
        android:textStyle="normal|italic"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/nessie_button"
        android:text="Nessie the Loch Ness Monster"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="0dp"
        style="@android:style/Widget.Holo.Button"
        android:layout_height="60dip"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:textSize="24sp"
        android:layout_width="300dip"
        android:textStyle="normal|italic"
        android:background="@android:color/darker_gray" />

</LinearLayout>